{
  "name": "@reliverse/fs",
  "author": "reliverse",
  "version": "0.8.0",
  "type": "module",
  "description": "@reliverse/fs is a utility library that wraps the Node.js native fs module and fs-extra package, providing enhanced file system functionalities. This package is part of the broader @reliverse/addons ecosystem.",
  "scripts": {
    "appts": "redrun knip lint format typecheck test build",
    "build": "tsup",
    "ci": "bun lint:eslint && bun typecheck && bun test && bun run build",
    "dev:eslint": "bun eslint --inspect-config",
    "dev": "vitest",
    "format:biome": "biome format --write .",
    "format": "redrun format:biome",
    "knip": "knip",
    "latest": "bun update --latest",
    "lint:biome": "biome lint --write .",
    "lint:eslint": "eslint --cache --fix .",
    "lint": "redrun lint:eslint lint:biome",
    "pub": "bun publish --access public",
    "test": "vitest run",
    "typecheck": "tsc --noEmit"
  },
  "files": [
    "dist"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    }
  },
  "types": "./dist/index.d.ts",
  "main": "./dist/index.js",
  "keywords": [
    "reliverse",
    "addons",
    "fs-extra",
    "fs"
  ],
  "license": "MIT",
  "dependencies": {
    "fs-extra": "^11.2.0",
    "pathe": "^1.1.2"
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.7",
    "@types/fs-extra": "^11.0.4",
    "@types/node": "^22.4.0",
    "eslint": "^9.9.0",
    "redrun": "^11.0.5",
    "terser": "^5.31.6",
    "tsup": "^8.2.4",
    "typescript": "5.6.0-beta",
    "vitest": "^2.0.5"
  }
}
